<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="gamePane"
            prefWidth="1080.0" prefHeight="720.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.HelloController"
            style="-fx-background-color: black;">

    <!-- Background (optional image) -->
    <ImageView fx:id="background"
               fitWidth="1080.0" fitHeight="720.0"
               preserveRatio="false"
               pickOnBounds="true"
               AnchorPane.topAnchor="0"
               AnchorPane.leftAnchor="0"/>

    <!-- Left scoreboard (example) -->
    <VBox layoutX="20" layoutY="40" spacing="10">
        <Label text="SCORE BOARD" style="-fx-font-size:18px; -fx-text-fill: white;"/>
        <!-- you can add other labels here -->
    </VBox>

    <!-- Right small scoreboard -->
    <VBox layoutX="920" layoutY="80" spacing="12">
        <Label fx:id="scoreLabel" text="SCORE: 0"
               style="-fx-font-family: 'Consolas'; -fx-font-size: 18; -fx-text-fill: white;"/>
        <Label fx:id="topScoreLabel" text="TOP SCORE: 0"
               style="-fx-font-family: 'Consolas'; -fx-font-size: 18; -fx-text-fill: white;"/>
        <Label fx:id="levelLabel" text="LEVEL: 1"
               style="-fx-font-family: 'Consolas'; -fx-font-size: 18; -fx-text-fill: white;"/>
        <Button fx:id="pauseButton" text="PAUSE" prefWidth="80" />
    </VBox>

</AnchorPane>
